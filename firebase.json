{
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 5052
    },
    "ui": {
      "port": 4000
    },
    "auth": {
      "port": 9099
    },
    "database": {
      "port": 9000
    },
    "singleProjectMode": true
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  }
}
